<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ptname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/ratdisp"
                    android:textStyle="bold"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textSize="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="103dp"
                    android:text="Call"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <at.markushi.ui.CircleButton
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="87dp"
                    android:layout_marginTop="50dp"
                    android:onClick="addPhoto"
                    android:src="@drawable/cam3"
                    app:cb_color="#D50000"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="91dp"
                    android:layout_marginTop="103dp"
                    android:text="Add Pic"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <at.markushi.ui.CircleButton
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="147dp"
                    android:layout_marginTop="50dp"
                    android:onClick="addReview"
                    android:src="@drawable/star2"
                    app:cb_color="#D50000"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="103dp"
                    android:text="Review"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <at.markushi.ui.CircleButton
                    android:onClick="sendcomplain"
                    android:id="@+id/complain"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="207dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/complaint"
                    app:cb_color="#D50000"
                    app:cb_pressedRingWidth="8dip" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="215dp"
                    android:layout_marginTop="103dp"
                    android:text="Issues"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <at.markushi.ui.CircleButton
                    android:onClick="gofunc"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="267dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/go1"
                    app:cb_color="#D50000"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="289dp"
                    android:layout_marginTop="103dp"
                    android:text="Go"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/circleButton"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="50dp"
                    android:onClick="call"
                    android:src="@drawable/calli"
                    app:cb_color="#D50000"
                    app:cb_pressedRingWidth="8dip" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">



                <Button
                    android:layout_marginTop="30dp"
                    android:onClick="more"
                    android:text="See photos"
                    android:textSize="17dp"
                    android:background="#D50000"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <Button
                    android:layout_marginTop="85dp"
                    android:onClick="addPhoto"
                    android:text="Add Photos"
                    android:textSize="17dp"
                    android:background="#D50000"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/call"
                    android:text="Call"
                    android:textStyle="bold"

                    android:textColor="#000000"

                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="23dp"
                    android:id="@+id/phno"
                    android:textColor="#000000"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="55dp"
                    android:id="@+id/facil"
                    android:text="Facilities"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="73dp"
                    android:id="@+id/facildisp"
                    android:textColor="#000000"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="105dp"
                    android:id="@+id/price"
                    android:text="Price"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="123dp"
                    android:id="@+id/pricedisp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="250dp"
                    android:id="@+id/more"
                    android:text="More Info"
                    android:textStyle="bold"
                    android:textColor="#000000"

                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckedTextView
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="250dp"
                    android:textColor="#000000"

                    android:id="@+id/splfeatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/add"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="23dp"
                    android:id="@+id/addisp"
                    android:textColor="#000000"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:onClick="viewinmap"
                    android:layout_marginTop="50dp"
                    android:text="View in Map"
                    android:textSize="17dp"
                    android:background="#D50000"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/oh"
                    android:text="Opening Hours"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="23dp"
                    android:id="@+id/ohdisp"
                    android:textColor="#000000"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/peak"
                    android:text="Peak Hours"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.github.mikephil.charting.charts.BarChart
                    android:layout_marginTop="33dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/graph">
                </com.github.mikephil.charting.charts.BarChart>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exp"
                    android:text="Complain here if you experienced a poor service"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/addc"
                    android:onClick="sendcomplain"
                    android:layout_marginTop="30dp"
                    android:text="Send Complain"
                    android:textSize="17dp"
                    android:background="#D50000"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rate"
                    android:text="Ratings and Reviews"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/seer"
                    android:onClick="seerev"
                    android:layout_marginTop="30dp"
                    android:text="See Review"
                    android:textSize="17dp"
                    android:background="#D50000"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/addr"
                    android:onClick="addReview"
                    android:layout_marginTop="85dp"
                    android:text="Rate/Add Review"
                    android:textSize="17dp"
                    android:background="#D50000"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Register your visit"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/went"
                    android:onClick="seerev"
                    android:layout_marginTop="30dp"
                    android:text="Register my visit"
                    android:textSize="17dp"
                    android:background="#D50000"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/coverpic"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:title="title set by me"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


</android.support.design.widget.CoordinatorLayout>